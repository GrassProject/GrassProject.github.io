---
import Cookies from "js-cookie";
import BaseHeader from "../components/BaseHeader.astro";
import Navigator from "../components/Navigator.astro";
import BaseFooter from "../components/BaseFooter.astro";
let isLoggedIn = false;
let user = null;

const redirectUri = `${typeof window !== 'undefined' ? window.location.href : ''}/callback}`;
const discordLoginUrl = `https://discord.com/oauth2/authorize?client_id=1358603949015564449&response_type=code&redirect_uri=${encodeURIComponent(redirectUri)}&scope=email+identify+openid`;

if (typeof window !== 'undefined') {
    const storedUser = Cookies.get('user');
    const storedLoggedIn = Cookies.get('isLoggedIn');
    if (storedUser && storedLoggedIn === 'true') {
        user = JSON.parse(storedUser);
        isLoggedIn = true;
    }
}

function logout() {
    isLoggedIn = false;
    user = null;
    Cookies.remove('user');
    Cookies.remove('isLoggedIn');
}

---

<html lang="ko">
<head>
    <BaseHeader />
    <title>GrassProject</title>
</head>
<body>
<div class="container" oncontextmenu="return false" ondragstart="return false" onselectstart="return false">
    <slot />

    <Navigator/>

    <div class="login">
        {isLoggedIn ? <div class="user-info">
                    <span class="user-text">Welcome, {user?.global_name || 'User'}</span>
                    <button onclick="logout()" class="round-btn logout-btn">
                        <span class="btn-text">Logout</span>
                    </button>
                </div> : <a href={discordLoginUrl} class="round-btn login-btn">
                    <span class="btn-text">Login</span>
                </a>}
    </div>

    <BaseFooter/>
</div>
</body>
</html>

<style>
    .container {
        min-height: 100vh;
        justify-content: space-between;
        text-align: center;
        font-family: 'Quicksand', system-ui, Avenir, Helvetica, Arial, sans-serif;
    }

    .login {
        margin-top: 2rem;
        display: flex;
        justify-content: center;
    }
    .user-info {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 0.5rem;
    }
    .user-text {
        opacity: 1;
        transition: opacity 0.3s ease-in-out;
    }
    .user-info:hover .user-text {
        opacity: 0;
    }
    .round-btn {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
        white-space: nowrap;
        width: 40px;
        height: 40px;
        border-radius: 50%;
        transition: all 0.3s ease-in-out;
        cursor: pointer;
        font-size: 0.9rem;
        font-weight: 500;
        text-decoration: none;
        color: #fff;
        position: relative;
    }
    .round-btn:hover {
        width: 120px;
        border-radius: 20px;
        justify-content: center;
    }
    .btn-text {
        opacity: 0;
        margin-left: 0.5rem;
        transition: opacity 0.2s ease-in-out;
    }
    .round-btn:hover .btn-text {
        opacity: 1;
    }
    .login-btn {
        background: #86bc7b;
    }
    .logout-btn {
        background: #c9f1a4;
        color: #242424;
    }
</style>